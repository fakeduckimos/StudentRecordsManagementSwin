@{
}
@model StudentRecordManagement.Models.ViewModels.AddDetentionRequest

<h1>Create Detention</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Student</label>
        @Html.DropDownListFor(model => model.StudentId, ViewBag.StudentList as SelectList, "--- Select student ---", new { @class = "form-control" })
    </div>

    <div class="mt-3">
        <label class="form-label">Detention Time</label>
        <select asp-for="DetentionTime" class="form-control" asp-items="Html.GetEnumSelectList<DetentionTime>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Predefined Reason</label>
        <select asp-for="PredefinedReasons" class="form-control" asp-items="Html.GetEnumSelectList<PredefinedReasons>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Breach Reason</label><br />
        @Html.TextAreaFor(model => model.BreachReason, 5, 60, null);
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>