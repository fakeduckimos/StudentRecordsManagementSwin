@model List<StudentRecordManagement.Models.Entities.Forms.SickBay>

<h1>Sick Bay Records</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
        <th>Created</th>
        <th>Name</th>
        <th>Reason</th>
        <th>Status</th>
        <th>Decision</th>
        <th> </th>
        </thead>
        <tbody>
            @foreach (var sickbayRecord in Model)
            {
                <tr>
                    <td>@sickbayRecord.Created</td>
                    <td>@sickbayRecord.Student.Firstname @sickbayRecord.Student.Surname</td>
                    <td>@sickbayRecord.SickBayReason</td>
                    <td>@sickbayRecord.Status</td>
                    <td>@sickbayRecord.SickBayOutAction</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="SickBay" asp-action="Edit" asp-route-id="@sickbayRecord.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
} else 
{
    <p>There is no sick bay records in the system</p>
}

