@{
}
@model StudentRecordManagement.Models.Entities.Forms.LeavePass

<h1>Edit Leave Pass</h1>

@if (Model is null)
{
    <p>No leave pass was found with this Id</p>
} else
{
    <form method="post">
        <div class="mt-3">
            <input type="hidden" class="form-control" asp-for="Id" readonly />
            <label class="form-label">Student</label>
            @Html.DropDownListFor(model => model.StudentId, ViewBag.StudentList as SelectList, "--- Select student ---", new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="mt-3">
            <label class="form-label">Sign Out Date Time</label>
            <input type="datetime-local" class="form-control" asp-for="SignOutDateTime" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Reason</label>
            <select asp-for="Reason" class="form-control" asp-items="Html.GetEnumSelectList<AbsentReason>()" disabled="disabled">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Details</label><br />
            @Html.TextAreaFor(model => model.Details, 5, 60, null);
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="LeavePass">
                Delete
            </button>
        </div>
    </form>
}