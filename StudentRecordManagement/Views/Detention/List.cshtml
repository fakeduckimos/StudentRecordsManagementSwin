@model List<StudentRecordManagement.Models.Entities.Forms.Detention>

<h1>Detention List</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Reason</th>
        <th>DetentionTime</th>
        <th>Form Status</th>
        </thead>
        <tbody>
            @foreach (var detention in Model)
            {
                <tr>
                    <td>@detention.Id</td>
                    <td>@detention.Student.Firstname @detention.Student.Surname</td>
                    <td>@detention.PredefinedReasons</td>
                    <td>@detention.DetentionTime.ToString()</td>
                    <td>@detention.Status</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Detention" asp-action="Edit" asp-route-id="@detention.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no late pass records in the system</p>
}

