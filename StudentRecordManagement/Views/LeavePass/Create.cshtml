@{
}
@model StudentRecordManagement.Models.ViewModels.AddLeavePassRequest

<h1>Create Leave Pass</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Student</label>
        @Html.DropDownListFor(model => model.StudentId, ViewBag.StudentList as SelectList, "--- Select student ---", new {@class="form-control"})
    </div>

    <div class="mt-3">
        <label class="form-label">Sign Out Date Time</label>
        <input type="datetime-local" class="form-control" asp-for="SignOutDateTime" />
    </div>

    <div class="mt-3">
        <label class="form-label">Reason</label>
        <select asp-for="Reason" class="form-control" asp-items="Html.GetEnumSelectList<AbsentReason>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Details</label><br />
        @Html.TextAreaFor(model => model.Details, 5, 60, null);
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>