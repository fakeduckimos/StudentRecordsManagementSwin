@model List<StudentRecordManagement.Models.Entities.Forms.LatePass>

<h1>Late Pass</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Sign In Datetime</th>
        <th> </th>
        </thead>
        <tbody>
            @foreach (var latePass in Model)
            {
                <tr>
                    <td>@latePass.Id</td>
                    <td>@latePass.Student.Firstname @latePass.Student.Surname</td>
                    <td>@latePass.SignInDateTime</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="LatePass" asp-action="Edit" asp-route-id="@latePass.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no late pass records in the system</p>
}

