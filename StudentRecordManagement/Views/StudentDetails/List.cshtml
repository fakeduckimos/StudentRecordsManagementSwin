@model List<StudentRecordManagement.Models.Entities.People.Student>

<h1>Students</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th> </th>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Firstname @student.Surname</td>
                    <td>@student.Email</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="StudentDetails" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no students in the system</p>
}

